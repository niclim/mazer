{
  "compilerOptions": {
    "outDir": "./public",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowJs": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "<src>/*": ["./src/*"]
    }
  },
  "lib": ["es2015"],
  "include": ["./src/**/*", "**/*.test.*", "**/*.spec.*", "**/__tests__/**/*"],
  "exclude": ["**/__mocks__/*"]
}
